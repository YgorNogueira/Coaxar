<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CoaxarApp.DetailsPage"
             BackgroundColor="#FFFFFF"
             >
    <Grid
        RowDefinitions=".6*, *"
        >

        <Border
            StrokeShape="RoundRectangle 5"
            >
            <Grid
                RowDefinitions=".7*, *"
                >
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Source="anurahug.jpg"
                    Aspect="Fill"
                    />

                <Border
                    Margin="10"
                    StrokeShape="RoundRectangle 10"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    BackgroundColor="White"
                    Padding="5"
                    >
                    <Label
                        Text="{Binding SelectedAnimal.EndangeredInternational}"
                        HorizontalOptions="End"
                        TextColor="Black"
                        FontFamily="POPR"
                        FontSize="8"
                        />
                </Border>

                <VerticalStackLayout
                    Padding="10"
                    VerticalOptions="End"
                    Grid.Row="1"
                    >

                    <Label
                        FontFamily="POPS"
                        FontSize="12"
                        Text="{Binding SelectedAnimal.CommonName}"
                        />

                    <Label
                        FontFamily="POPR"
                        FontSize="12"
                        Text="{Binding SelectedAnimal.Species}"
                        FontAttributes="Italic"
                        />

                </VerticalStackLayout>

            </Grid>
        </Border>

        <ScrollView
            Grid.Row="1"
            >

            <Grid
                RowDefinitions=".4*, .2*, *"
                >

                <Border
                    Grid.Row="0"
                    StrokeShape="RoundRectangle 5"
                    StrokeThickness="1.2"
                    Opacity="0.4"
                    Padding="5"
                    >
                    <HorizontalStackLayout
                        BackgroundColor="#FFFFFF"
                        HorizontalOptions="Center"
                        Spacing="15"
                        >

                        <VerticalStackLayout
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            >
                            <Border
                                StrokeShape="RoundRectangle 5"
                                Padding="2"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                BackgroundColor="#DCFCE7"
                                Stroke="Transparent"
                                >

                                <Image
                                    Source="ruler.png"
                                    />

                            </Border>

                            <Label
                                FontFamily="POPR"
                                FontSize="6"
                                TextColor="Black"
                                Text="{Binding SelectedAnimal.Size}"
                                />

                            <Button
                                Clicked="OnPlayClicked"
                                Text="play">

                            </Button>

                            <toolkit:MediaElement
                                x:Name="VocPlayer"
                                Source="{Binding SelectedAnimal.VocalizationSource}"
                                ShouldAutoPlay="True"
                                />

                        </VerticalStackLayout>

                    </HorizontalStackLayout>
                </Border>
            </Grid>

        </ScrollView>

    </Grid>
</ContentPage>